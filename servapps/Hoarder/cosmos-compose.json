{
  "cosmos-installer": {
    "post-install": [
      {
        "type": "info",
        "label": "Hoard stuff"
      }
    ]
  },
  "services": {
    "{ServiceName}": {
      "image": "ghcr.io/hoarder-app/hoarder:release",
      "restart": "unless-stopped",
      "container_name": "{ServiceName}",
      "volumes": [
        {
          "source": "{ServiceName}-hoarder-data",
          "target": "/data",
          "type": "volume"
        }
      ],
      "ports": [
        "3000:3000"
      ],
      "environment": [
        "MEILI_ADDR=http://{ServiceName}-meilisearch:7700",
        "BROWSER_WEB_URL=http://{ServiceName}-chrome:9222",
        "HOARDER_VERSION=release",
        "NEXTAUTH_SECRET={Passwords.0}",
        "MEILI_MASTER_KEY={Passwords.1}",
        "NEXTAUTH_URL=https://hoarder.home.alluvium.cloud",
        "DATA_DIR=/data"
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:3000",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ],
      "labels": {
        "cosmos-persistent-env": "NEXTAUTH_SECRET MEILI_MASTER_KEY",
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}"
      }
    },
    "{ServiceName}-chrome": {
      "image": "gcr.io/zenika-hub/alpine-chrome:123",
      "restart": "unless-stopped",
      "container_name": "{ServiceName}-chrome",
      "command": "--no-sandbox --disable-gpu --disable-dev-shm-usage --remote-debugging-address=0.0.0.0 --remote-debugging-port=9222 --hide-scrollbars",
      "labels": {
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}"
      }
    },
    "{ServiceName}-meilisearch": {
      "image": "getmeili/meilisearch:v1.11.1",
      "restart": "unless-stopped",
      "container_name": "{ServiceName}-meilisearch",
      "environment": [
        "HOARDER_VERSION=release",
        "NEXTAUTH_SECRET={Passwords.0}",
        "MEILI_MASTER_KEY={Passwords.1}",
        "NEXTAUTH_URL=https://hoarder.home.alluvium.cloud",
        "DATA_DIR=/data"
      ],
      "volumes": [
        {
          "source": "{ServiceName}-meilisearch-data",
          "target": "/meili_data",
          "type": "volume"
        }
      ],
      "labels": {
        "cosmos-persistent-env": "NEXTAUTH_SECRET MEILI_MASTER_KEY",
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}"
      }
    }
  }
}
